{
  "name": "asm.ts",
  "version": "0.0.4",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "description": "A X86_64 assember written in TypeScript. Chaining API. Supports macros. Advanced instruction support.",
  "keywords": [
    "assembler",
    "macro",
    "x86",
    "x64",
    "x86_64",
    "TypeScript",
    "JavaScript"
  ],
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "ts-node --esm build.ts",
    "postbuild": "tsc && ts-node --esm cleanBuild.ts",
    "predeploy": "yarn build",
    "deploy": "yarn test",
    "gen-index": "ts-node --esm genIndex.ts",
    "postdeploy": "npm publish",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) -i './src/__tests__'",
    "test:backend": "yarn node --experimental-vm-modules $(yarn bin jest) -i './src/backend/__tests__'"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyr0/asm.ts.git"
  },
  "author": "Aron Homberg <info@aron-homberg.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kyr0/asm.ts/issues"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@types/jest": "^27.5.0",
    "@types/node": "^16.11.7",
    "esbuild": "^0.14.38",
    "fast-glob": "^3.2.11",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
